@model MyPhotos.Entities.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h4>Kategori Detayı</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Açıklama
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Başlık
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Kategori Fotoğrafı
        </dt>

        <dd>
           <div class="thumbnail col-md-4"><img src="@Model.CategoryPhoto" />
</div>
        </dd>

<dt>
    Oluşturan Kullanıcı
</dt>

<dd>
    @Html.DisplayFor(model => model.CreatedOn)
</dd>

<dt>
    Değiştirilme Tarihi
</dt>

<dd>
    @Html.DisplayFor(model => model.ModifiedOn)
</dd>

<dt>
    Değiştiren Kullanıcı
</dt>

<dd>
    @Html.DisplayFor(model => model.ModifiedUser)
</dd>

    </dl>
</div>

<script>
    $(function () {

        $("footer").hide()
    });

</script>